<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Course List</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
        <style>
            body        { padding-top:80px; word-wrap:break-word; }
        </style>
    </head>
    <body>
        <div class="container">
            <div class= "row">
                <a href="/profile"><button type="button" class="btn btn-warning">Profile</button></a>
                <br><br>
            </div>
            <div class="row">
                <h1><center>Course List</center></h1>
                <!-- LOCAL INFORMATION -->
                <div class="col-sm-6">
                    <div class="well">
                        <h3><span class="fa fa-user"></span> Courses</h3>
                        <% courses.forEach(function(Course){
                            var course=JSON.parse(Course);%>
                        <form  action="/courses/<%=course.courseID%>" method="get">
                            <p>
                                <strong>Subject</strong>: <%= course.courseName %><br>
                                <strong>Professor</strong>: <%= course.professorName %><br>
                                <strong>Time</strong>: <%= course.time%><br>
                            </p>
                            <input type="submit" class="btn btn-info" value="Detail"><br>
                            <hr>
                        </form>
                        <% });%>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
